{
  "name": "kalundborg-voice-assistant",
  "version": "1.0.0",
  "description": "Voice assistant for Kalundborg Kommune using OpenAI Realtime API",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && NODE_TLS_REJECT_UNAUTHORIZED=0 node conversation-server.js",
    "dev:frontend": "cd frontend && npm start",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces",
    "clean": "npm run clean:workspaces && rm -rf node_modules package-lock.json",
    "clean:workspaces": "rm -rf frontend/node_modules frontend/package-lock.json backend/node_modules backend/package-lock.json"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kalundborg/voice-assistant"
  },
  "keywords": [
    "voice-assistant",
    "openai",
    "realtime-api",
    "kalundborg",
    "danish",
    "municipality"
  ],
  "author": "Kalundborg Kommune",
  "license": "MIT"
}